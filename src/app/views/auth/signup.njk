{% extends "layouts/auth.njk"%}

{% block body %}
	<form action="" method="post">
		<label for="avatar">
			<img src="/images/avatar.svg" height="24" alt="">
		</label>

		<input type="file" name="avatar" id="avatar">

		<input type="text" name="name" placeholder="Nome Compelto">
		<input type="email" name="email" placeholder="Seu E-mail">
		<input type="password" name="password_hash" placeholder="Senha secreta">

		<label for="provider">
			<input type="checkbox" name="provider" id="provider" value="1">
			Sou cabelereiro
		</label>

		<button type="submit">Cirar Conta</button>

		<a href="/">JÃ¡ Possuo Conta</a>
	</form>

	<script type="text/javascript">
		const avatarInput = document.getElementById('avatar')
		var img = document.querySelector('label[for=avatar] img')
		console.log(avatarInput)
		avatarInput.onchange = function(e){
			img.classList.add('preview')
			img.src = URL.createObjectURL(e.target.files[0])
		}
	</script>
{%endblock%}